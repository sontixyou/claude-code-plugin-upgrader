{
  "description": "Plugin upgrade notification hooks",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-updates-notify.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
